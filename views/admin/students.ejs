<script>
  function init() {
    jQuery("#list").jqGrid({
      datatype : "local",
      height : 250,
      colNames : ['学号', '姓名', '年级', '初始密码(点击可更改)'],
      colModel : [ 
          {name: 'sid', index: 'sid', width: 55, key: true},
          {name: 'name', index: 'name', width: 89},
          {name: 'grade', index: 'grade', width: 100},
          {name: 'password', index: 'password', width: 100, editable: true},
      ],
      multiselect : true,
      rowNum: 10,
      rowList: [10, 20, 30],
      sortname: 'sid',
      autowidth: true,
      cellEdit: true,
      cellsubmit: 'clientArray', 
      afterSaveCell: function(rowid, cellname, value, iRow, icol) {
          var id = $("#list").getCell(iRow, 0);
          console.log(id, cellname, value)
      }

    });
  }
  
  var params = {
    pageIndex: 1,
    pagelimit: 5,
  };
  // ajax请求数据
  $.ajax({
    type: 'POST',
    url:"/studentsList",
    data: params,
    success:function(result){
      console.log(999, result);
      if(!result.data) return;
      var data = result.data;
      init() ;
      for(let i = 0; i <= data.length; i++) {
        jQuery("#list").jqGrid('addRowData', i+1, data[i]);
      }
  }});
</script>
